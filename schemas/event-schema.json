{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "event",
    "description": "A event is an object that contain information of a occurrence about a transaction.",
    "type": "object",
    "properties": {
        "id": {
            "description": "The unique identifier(UUID) for an event",
            "type": "string",
            "format": "uuid"
        },
        "time": {
            "description": "Creation time of the event. (ISO 8601)",
            "type": "string",
            "format": "date-time"
        },
        "transactionId": {
            "description": "Transaction identifier.",
            "type": "string",
            "format": "uuid"
        },
        "data": {
            "description": "Status of the transaction.",
            "type": "object",
            "minProperties": 1,
            "properties": {
                "status": {
                    "description": "Status of the transaction.",
                    "type": "string"
                },
                "step": {
                    "description": "Step of the transaction.",
                    "type": "string"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "status"
                    ]
                },
                {
                    "required": [
                        "step"
                    ]
                }
            ]
        }
    },
    "required": [
        "id",
        "time",
        "transactionId",
        "data"
    ]
}